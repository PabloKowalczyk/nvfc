#!/usr/bin/env php
<?php

use NvFanController\UserInterface\WatchCommand;
use Symfony\Component\Console\Application;

$generatePath = static function (string ...$parts) {
    return \implode(DIRECTORY_SEPARATOR, $parts);
};
$autoloadPaths = [
    // Dependency
    $generatePath(
        \dirname(__DIR__, 3),
        'autoload.php'
    ),
    // Vendor/Bin
    $generatePath(
        \dirname(__DIR__, 2),
        'autoload.php'
    ),
    // Local dev
    $generatePath(
        \dirname(__DIR__),
        'vendor',
        'autoload.php'
    ),
];

$autoloadFileFound = false;

foreach ($autoloadPaths as $autoloadPath) {
    if (\file_exists($autoloadPath)) {
        require_once $autoloadPath;
        $autoloadFileFound = true;
        break;
    }
}

if (false === $autoloadFileFound) {
    $message = \sprintf(
        'Unable to find "autoload.php" file in paths: "%s".',
        \implode(
            '", "',
            $autoloadPaths
        )
    );

    throw new RuntimeException($message);
}

$application = new Application('NVidia Fan Controller', 'v0.2.0');
$application->add(new WatchCommand());
$application->run();
